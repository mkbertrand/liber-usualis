{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeSnapshots",
                "ec2:CreateSnapshot",
                "ec2:RegisterImage",
                "ec2:DescribeImages",
                "ec2:ImportImage",
                "ec2:DescribeImportImageTasks",
                "ec2:CreateTags",
                "ec2:CopySnapshot",
                "ec2:ModifySnapshotAttribute"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::nixos-iam-bucket",
                "arn:aws:s3:::nixos-iam-bucket/*"
            ]
        }
    ]
}
